<!DOCTYPE html>
<html ng-app="app">
	<head>
		<title>Jewellery Software</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="/stylesheets/bootstrap.min.css" rel="stylesheet"/>
		<link href="/bower_components/bootstrap-toggle/css/bootstrap-toggle.min.css" rel="stylesheet"/>
		<link href="/bower_components/bootstrap-checkbox-x/css/checkbox-x.min.css" rel="stylesheet"/>
		<link href="/bower_components/bootstrap-checkbox-x/css/theme-krajee-flatblue.min.css" rel="stylesheet"/>


		<script src="/javascripts/jquery-1.11.2.min.js" type="text/javascript"></script>
		<script src="/javascripts/js.cookie-2.1.1.min.js" type="text/javascript"></script>
		<script src="/bower_components/angular/angular.js"></script>
		<script src="/bower_components/angular-bootstrap/ui-bootstrap.min.js"></script>
		<script src="/bower_components/bootstrap-checkbox-x/js/checkbox-x.min.js"></script>


		<script src="/bower_components/bootstrap-toggle/js/bootstrap-toggle.min.js"></script>
		<script src="/javascripts/includes.js" type="text/javascript"></script>
		<script src="/javascripts/date.format.js" type="text/javascript"></script>
		<style type="text/css">
			body {
			   font-size: 20px;
			}
			.check{
				margin-top:60px;
				height:100%;
				display: inline-block;
				vertical-align: middle;
				float: none;
			}
		</style>
	</head>
	<body ng-controller="bodyController">

		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container-fluid">
				<div class="navbar-header">
	      			<button class=" btn" style="margin-top:8px;" onclick="window.history.back();">
						<b>&#8678;</b> Back
					</button>
					
      				<span style="color: white;
      				font-size:24px;position:relative;top:8px;left:20px;">
      					Stock
      				</span>
    			</div>
				<div class="nav navbar-nav navbar-right" style="padding: 10px;">
					<input type="checkbox" id="langToggle">
				</div>
			</div>
		</nav>
		<br>
		<br>
		<br>


		<div class="container">
			<div class="well form-inline row">
				<div class="col-sm-4">
					<label class="control-label">Search:</label>
					<input class="form-control input-md" ng-model="cat"/>
				</div>
				<div class="col-sm-3">
					<label>
						<input type="checkbox"
							ng-model='search.metal2' 
							ng-false-value='"Silver"' 
							ng-true-value='' />
								Gold
       				</label>
       			</div>
       			<div class="col-sm-3">
       				<label>
	       				<input type="checkbox"
							ng-model='search.metal1' 
							ng-false-value='"Gold"' 
							ng-true-value='' />
								Silver
       				</label>
				</div>
				<div class="col-sm-2">
				
					<span class="glyphicon glyphicon-name"></span>
				</div>
			</div>
			
			<ul class="list-group" ng-repeat="article in articles | filter:cat | filter:search.metal1 | filter:search.metal2">
  				<li class="list-group-item {{article.bgClass}}">
  					<div class="row">
						<img class="col-lg-2 col-sm-2" data-ng-src="data:image/png;base64,{{article.category_src}}"/>
						<div class="col-lg-9 col-sm-9">
							<div class="row">
								<h3>{{article.category_name}}</h3>
							</div>
							<div class="row">
								<div class="col-lg-5 col-sm-5">
									<div class="row">
										<div class="col-lg-6 col-sm-6">{{netWeight}}</div>
										<div class="col-lg-4 col-sm-4"><b>{{article.netWeight}}</b></div>
										<div class="col-lg-2 col-sm-2">{{weight_unit}}</div>
									</div>
									<div class="row">
										<div class="col-lg-6 col-sm-6">{{grossWeight}}</div>
										<div class="col-lg-4 col-sm-4"><b>{{article.grossWeight}}</b></div>
										<div class="col-lg-2 col-sm-2">{{weight_unit}}</div>
									</div>

									<div class="row">
										<div class="col-lg-6 col-sm-6">{{Wages}}</div>
										<div class="col-lg-4 col-sm-4"><b>{{article.wages}}</b></div>
										<div class="col-lg-2 col-sm-2">&#8377;<!--rupees--></div>
									</div>
								</div>
								<div class="col-lg-7 col-sm-7">
									<div class="row">
										<div class="col-lg-5 col-sm-5">Metal :</div>
										<div class="col-lg-7 col-sm-7"><b>{{article.metal}}</b></div>
									</div>
									<div class="row">
										<div class="col-lg-5 col-sm-5">{{Karat}} :</div>
										<div class="col-lg-7 col-sm-7"><b>{{article.karat}}</b></div>
									</div>
									<div class="row">
										<div class="col-lg-4 col-sm-4">Added on :</div>
										<div class="col-lg-8 col-sm-8"><b>{{article.added}}</b></div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-xs-1 check">
							<input type="checkbox" class="input20" data-theme="krajee-flatblue" data-toggle="checkbox-x" value="0" data-three-state="false"  data-size="xl">
						</div>
					</div>
  				</li>
			</ul>
		</div>

		<script type="text/javascript">
			angular
				.module('app',[])
				.controller("bodyController",['$scope', '$http', function($scope, $http){
					window.scope = $scope;
					window.http = $http;

					l([{
						New			: "New",
						Article 	: "Article",
						Category 	: "Category",
						Wages 		: "Wages",
						weight_unit : "grams",
						grossWeight : "Gross Weight",
						netWeight   : "Net Weight",
						Karat 		: "Karat"
					}]);
					
					$scope.$watch('lang', function() {
						if(window.scope.lang != $scope.lang){
							window.scope.lang = $scope.lang;
						}
						if(window.scope.lang){
							window.toggle.bootstrapToggle((window.scope.lang == "eng")?'on':'off');
							for (var i = 0; i < $scope.articles.length; i++) {
								$scope.articles[i].category_name = getL($scope, window.names[i]);
							}
						}

					});

					$(function(){
						window.toggle = $("#langToggle").bootstrapToggle({
							on: 'English',
							off: 'Marathi',
							offstyle:"warning"
						}).change(function() {
							$scope.lang = $(this).prop('checked') ? "eng" : "mar";
							l([window.obj]);
							Cookies.set("my_lang_settings", window.scope.lang);
						});
						var lang = Cookies.get("my_lang_settings");
						if(lang){
							window.scope.lang = lang;
						}else{
							if(!window.scope.lang){
								window.toggle.bootstrapToggle("off");
							}
						}
						if(window.scope.lang == "eng"){
							window.toggle.bootstrapToggle('on');
						}

						
					});
					$scope.articles = [];
					$http
						.get("/api/stock/")
						.success(function(articles) {
							window.names = [];

							angular.forEach(articles, function(article){
								$http
									.get("/api/categories/"+article.category)
									.success(function(category){
										var myObj = {};
										var dt = new Date(article.added);
										 
										myObj.netWeight = article.netWeight;
										myObj.grossWeight = article.grossWeight;
										myObj.karat = article.karat;


										myObj.metal = article.metal;
										myObj.added = dt.format("h:MM:ss tt d-mmm-yy");
										myObj.wages = article.wages;
										window.names.push(category.name);
										myObj.metal = article.metal;
										myObj.category_name = getL($scope, category.name);
										myObj.category_src = base64ArrayBuffer(category.image.data.data);
										myObj.bgClass = "list-group-item-"+((article.metal == "Gold")?"warning":"info");
										$scope.articles.push(myObj);
										setTimeout(function(){
											$(".input20").checkboxX();
										},100);
									});
							});
					});
			}]);
		</script>
	</body>
</html>